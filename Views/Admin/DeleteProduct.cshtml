@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@model FashionShop.Data.HangHoa


<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-danger text-white">
            <h2 class="mb-0">Delete Product</h2>
            
        </div>
        <div class="card-body">
            <div class="mb-4">
                <h4 class="fw-bold">@Model.TenHh</h4>
                <div class="mb-3">
                    <img src="~/hinh/HangHoa/@Model.Hinh" alt="@Model.TenHh" class="img-thumbnail" style="width: 150px; height: 150px;">
                </div>
                <p><strong>Price:</strong> @Model.DonGia</p>
                <p><strong>Category:</strong> @Model.MaLoaiNavigation?.TenLoai</p>
                <p><strong>Description:</strong> @Model.MoTaDonVi</p>
            </div>

            <div class="alert alert-warning" role="alert">
                Are you sure you want to delete this product? This action cannot be undone.
            </div>

            <form asp-action="DeleteProductConfirmed" method="post" asp-route-id="@Model.MaHh">
                <div class="d-flex justify-content-end">
                    <button type="submit" class="btn btn-danger me-2">
                        <i class="bi bi-trash"></i> Delete
                    </button>
                    <a asp-action="Products" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
