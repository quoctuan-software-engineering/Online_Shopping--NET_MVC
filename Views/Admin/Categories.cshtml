@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@model IEnumerable<FashionShop.Data.Loai>


<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">List of Categories</h2>
        
        <a asp-action="CreateCategory" class="btn btn-success">
            <i class="bi bi-plus-lg"></i> Add New Category
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover table-bordered text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th class="col-2">Id</th>
                        <th class="col-4">Category Name</th>
                        <th class="col-6">Description</th>
                        <th class="col-2">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="fw-bold">@item.MaLoai</td>
                            <td class="fw-bold">@item.TenLoai</td>
                            <td>@item.MoTa</td>
                            <td>
                                <a asp-action="EditCategory" asp-route-id="@item.MaLoai"
                                    class="btn btn-sm btn-primary me-1">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
