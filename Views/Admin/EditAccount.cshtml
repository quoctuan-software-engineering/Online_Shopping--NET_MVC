@{
    ViewData["Title"] = "Edit Account";
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}
@model FashionShop.Data.KhachHang


<div class="container my-5">
    <div class="card shadow-lg">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Edit Account</h2>
        </div>

        <div class="card-body">
            <form asp-action="EditAccount" method="post">
                <input type="hidden" asp-for="MaKh" />

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="HoTen" class="form-label fw-bold">Full Name</label>
                        <input asp-for="HoTen" class="form-control" placeholder="Enter full name" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DienThoai" class="form-label fw-bold">Phone Number</label>
                        <input asp-for="DienThoai" class="form-control" type="tel" placeholder="Enter phone number" />
                    </div>
                </div>

                <div class="row g-3 mb-3">
                    <div class="col-md-6">
                        <label asp-for="MatKhau" class="form-label fw-bold">Password</label>
                        <input asp-for="MatKhau" class="form-control" type="password" placeholder="Enter password" />
                    </div>

                    <div class="col-md-6">
                        <label asp-for="DiaChi" class="form-label fw-bold">Address</label>
                        <input asp-for="DiaChi" class="form-control" placeholder="Enter address" />
                    </div>
                </div>

                <div class="d-flex justify-content-end mt-4">
                    <button type="submit" class="btn btn-success me-2">
                        <i class="bi bi-save"></i> Save Changes
                    </button>
                    <a asp-action="Accounts" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
